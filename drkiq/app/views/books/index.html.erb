<div class="container text-center">

  <h1 class="home-title">My books (<%= @books.count %>)</h1>
  <ul>
    <% @books.each do | book | %>
      <li><%= image_tag book.image_url, alt: "book image"%></li>
      <li><%=  book.name%></li>
      <li><%=  book.description%></li>
    <% end %>
  </ul>

</div>
